<div class="content_text" style="margin:{{ section.settings.margin }}px; font-size:{{ section.settings.fontsize }}px; text-align:{{ section.settings.text-align }};">
    {{section.settings.text}}
</div>
  
  
  {% schema %}
    
  {
    "name":"Text",
    "settings":[
       {
          "id":"text",
          "type":"richtext",
          "label":"Text Content"
       },
       {
         "type": "range",
         "id": "fontsize",
         "min": 8,
         "max": 20,
         "step": 1,
         "unit": "px",
         "label": "Font size",
         "default": 14
      },
      {
         "id":"text-align",
         "type":"select",
         "label":"Text Alignment",
         "options":[
            {
               "value":"left",
               "label":"Left"
            },
            {
               "value":"center",
               "label":"Center"
            },
            {
               "value": "right",
               "label": "Right"
            }
         ],
         "default":"center"
      }
    ],
    "presets":[
       {
          "name":"Content Text",
          "category":"Content"
       }
    ]
 }
  
  {% endschema %}
  
  {% stylesheet %}

  .content_text {
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: center;
   margin: -1rem 0;
  }
  
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}
  