<div id="cta_bg-button" style="background-image:url('{{section.settings.image.src | img_url: 'master'}}')"​​​​​​>
  <div class="cta_wrapper">
    <h2 class="rich-text__heading--large section-header__title h1" style="color: {{ section.settings.text-color }}"> {{ section.settings.text-box }} </h2>
    <p style="color: {{ section.settings.text-color }}">{{ section.settings.content }}</p>

    <a href="{{ section.settings.link }}" class="button" style="color:{{ section.settings.button-text-color }}; background-color:{{ section.settings.button-bg }}; flex-direction:{{ section.settings.button-icon-position }};">
    
      {% if section.settings.button-icon %}
        <img src="{{ section.settings.button-icon | img_url: 'master' }}" 
        style="width:{{ section.settings.button-icon-size }}px; 
        height:{{ section.settings.button-icon-size }}px;
        filter:{{ section.settings.button-icon-color }};">
      {% endif %}
  
      {{ section.settings.linktext }}
    </a>

  </div>
</div>

{% schema %}

{
  "name":"CTA - Bg Image and Button",
  "settings":[
     {
        "id":"image",
        "type":"image_picker",
        "label":"Background Image"
     },
     {
        "id":"text-box",
        "type":"text",
        "label":"Heading",
        "default":"Heading"
     },
     {
        "id":"content",
        "type":"html",
        "label":"Content",
        "default":"Content goes here."
     },
     {
        "id":"text-color",
        "type":"color",
        "label":"Text Color",
        "default":"#000"
     },
     {
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Click here"
    },
     {
        "id":"button-icon",
        "type":"image_picker",
        "label":"Button Icon (*please use a transparent PNG)"
     },
     {
        "id":"button-icon-color",
        "type":"radio",
        "label":"Icon Color",
        "options":[
           {
              "value":"brightness(0) invert(1)",
              "label":"White"
           },
           {
              "value":"",
              "label":"Default"
           }
        ],
        "default":"brightness(0) invert(1)"
     },
     {
        "id":"button-icon-position",
        "type":"radio",
        "label":"Icon Position",
        "options":[
           {
              "value":"row",
              "label":"Left"
           },
           {
              "value":"row-reverse",
              "label":"Right"
           }
        ],
        "default":"row"
     },
     {
        "id":"button-icon-size",
        "type":"range",
        "min":0,
        "max":20,
        "step":1,
        "unit":"px",
        "label":"Icon Size",
        "default":16
     },
     {
      "id": "button-text-color",
      "type": "color",
      "label": "Button Text Color",
      "default": "#fff"
    },
    {
      "id": "button-bg",
      "type": "color",
      "label": "Button Background Color",
      "default": "#1f2021"
    }
  ],
  "presets":[
     {
        "name":"CTA - Bg Image and Button",
        "category":"Call To Action"
     }
  ]
}

{% endschema %}

{% stylesheet %}

  #cta_bg-button {
      background-size: cover;
      display: flex;
      flex-direction: column!important;
      place-items: flex-end;
      text-align: center;
      width: 100%;
      height: 551px;
      padding-right: 10%;
      background-repeat: no-repeat;
  }

  #cta_bg-button .cta_wrapper {
    display: flex;
    flex-direction: column;
    text-align: left;
    margin: auto 0;
    max-width: 80%;
    padding-left: 30%;
    padding-right: 15%;
  }

#cta_bg-button .button {
    font-family: Lora, serif;
    display: inline-block;
    padding: 12px 20px;
    font-size: 13px;
    cursor: pointer;
    text-decoration: none;
    color: #fff;
    background-color: #1f2021;
    border: none;
    border-radius: 0.62em;
    max-width: max-content;
    transform: translateY(0em);
    -webkit-transition: all .15s ease-out;
    -moz-transition: all .15s ease-out;
    -ms-transition: all .15s ease-out;
    -o-transition: all .15s ease-out;
    transition: all .15s ease-out;
}

#cta_bg-button .button:hover {
    background-color: #3d3f41!important;
    color: #fff;
    transform: translateY(-0.25em);
}

@media screen and (max-width: 768px) {
  #cta_bg-button {
    width: 100%;
    height: 920px;
    padding-right: 10%;
    background-repeat: no-repeat;
    background-position: bottom;
  }

  #cta_bg-button .cta_wrapper {
    max-width: 100%;
    padding-left: 22%;
  }

}


{% endstylesheet %}

