<section id="content_image-text">
  <div class="content_wrapper">

    {% if section.settings.alignment == "left" %}

      <div class="content_body">
        <div class="image">

          {% if section.settings.radius == "rounded" %}
            <img src="{{ section.settings.image | img_url: 'master' }}" style="border-radius: 100%">
          {% else %}
            {{ section.settings.image | img_url: 'master' | img_tag }}
          {% endif %}

        </div>
        <div class="content">
          <h2 class="content_header rich-text__heading--large section-header__title h1">
            {{ section.settings.heading }}
          </h2>

          {{ section.settings.content }}

          {% if section.settings.button-boolean == "true" %}
            <a href="{{ section.settings.link }}" class="button">{{ section.settings.linktext }}</a>
          {% endif %}

        </div>
      </div>

    {% else %}

        <div class="content_body">
          <h2 class="content_header rich-text__heading--large section-header__title h1">
            {{ section.settings.heading }}
          </h2>

          {{ section.settings.content }}

          {% if section.settings.button-boolean == "true" %}
            <a href="{{ section.settings.link }}" class="button">{{ section.settings.linktext }}</a>
          {% endif %}

        </div>
        <div class="image">

          {% if section.settings.radius == "rounded" %}
            <img src="{{ section.settings.image | img_url: 'master' }}" style="border-radius: 100%">
          {% else %}
            {{ section.settings.image | img_url: 'master' | img_tag }}
          {% endif %}

        </div>

    {% endif %}

  </div>
</section>

{% schema %}
  
{
  "name":"Content-Image, text, btn",
  "settings":[
     {
        "id":"image",
        "type":"image_picker",
        "label":"Image"
     },
     {
        "id":"alignment",
        "type":"select",
        "label":"Image Alignment",
        "options":[
           {
              "value":"left",
              "label":"Left"
           },
           {
              "value":"right",
              "label":"Right"
           }
        ],
        "default":"left"
     },
     {
        "id":"radius",
        "type":"select",
        "label":"Border Shape",
        "options":[
           {
              "value":"rounded",
              "label":"Rounded"
           },
           {
              "value":"square",
              "label":"Square"
           }
        ],
        "default":"rounded"
     },
     {
        "id":"heading",
        "type":"text",
        "label":"Heading",
        "default":"Heading"
     },
     {
        "id":"content",
        "type":"html",
        "label":"Content",
        "default":"Content goes here."
     },
     {
        "type":"radio",
        "id":"button-boolean",
        "label":"Include Button?",
        "options":[
           {
              "value":"true",
              "label":"Yes"
           },
           {
              "value":"false",
              "label":"No"
           }
        ],
        "default":"false"
     },
     {
        "id":"link",
        "type":"url",
        "label":"Button link"
     },
     {
        "id":"linktext",
        "type":"text",
        "label":"Button text",
        "default":"Click here"
     }
  ],
  "presets":[
     {
        "name":"Content-Image, text & button",
        "category":"Content"
     }
  ]
}

{% endschema %}

{% stylesheet %}

#content_image-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

#content_image-text .content_wrapper {
  display: flex;
  flex-direction: column;
}

#content_image-text .content_body {
  display: flex;
  flex-direction: row;
}

#content_image-text .image {
  width: 40%;
  align-items: center;
  display: flex;
}

#content_image-text .image img {
  max-width: 100%;
}

#content_image-text .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60%;
  padding: 4.5rem;
}

#content_image-text .button {
	width: max-content;
  font-family: Lora, serif;
  display: inline-block;
  padding: 12px 20px;
  font-size: 13px;
  cursor: pointer;
  text-decoration: none;
  color: #fff;
  background-color: #1f2021;
  border: none;
  border-radius: 0.62em;
  transform: translateY(0em);
  -webkit-transition: all .15s ease-out;
  -moz-transition: all .15s ease-out;
  -ms-transition: all .15s ease-out;
  -o-transition: all .15s ease-out;
  transition: all .15s ease-out;
}

#content_image-text .button:hover {
  background-color: #3d3f41!important;
  color: #fff;
  transform: translateY(-0.25em);
}

.index-sections .shopify-section:nth-child(4) {
  margin-top: 0 !important;
}

@media screen and (max-width: 768px) {

  #content_image-text .content {
    padding: 0;
    width: 80%;
  }

  #content_image-text .content .content_header {
    font-size: 32px;
  }

  #content_image-text .content_body {
    flex-direction: column;
    align-items: center;
  }

  #content_image-text .image {
    width: 100%;
    align-items: center;
    justify-content: center;
  }

  #content_image-text .image img {
    max-width: 300px;
    margin: 2rem;
  }
}

{% endstylesheet %}

